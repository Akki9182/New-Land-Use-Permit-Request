        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || !newValue) {
        return;
    }

    // Convert the newValue to a standard JavaScript Date object
    var selectedDate = new Date(newValue);
    
    // Get the current date
    var currentDate = new Date();
    
    // Set time to midnight for both dates to ensure accurate comparison
    currentDate.setHours(0, 0, 0, 0);  // Set to midnight
    selectedDate.setHours(0, 0, 0, 0);  // Set to midnight

    // Compare the dates
    if (selectedDate < currentDate) {
        // Show an error message directly below the field
        g_form.showFieldMsg('start_date', 'The selected date cannot be in the past.', 'error');
        
        // Clear the date field
        g_form.clearValue('start_date');
    } else {
        // Optionally clear any existing error message if the date is valid
        g_form.hideFieldMsg('start_date');
    }
}
]]></script>
