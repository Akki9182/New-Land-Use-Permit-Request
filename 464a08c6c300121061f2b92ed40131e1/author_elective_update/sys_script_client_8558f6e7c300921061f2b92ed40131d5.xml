        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading) {
        return;
    }

    // Define the state field and section name
    var stateField = 'state'; // Replace with the actual name of your state field
    var sectionName = 'presubmission'; // Replace with the actual name of your section
    
    // Get the current value of the state field
    var stateValue = g_form.getValue(stateField);

    // Get all fields in the form
    var allFields = g_form.getEditableFields(); // Get all editable fields on the form
    
    // Loop through each field
    for (var i = 0; i < allFields.length; i++) {
        var fieldName = allFields[i];
        
        // Get the field's section name
        var fieldSectionName = getSectionName(fieldName);
        
        // Check if the field belongs to the specified section
        if (fieldSectionName === sectionName) {
            // Make the field mandatory based on the state value
            g_form.setMandatory(fieldName, stateValue === '3');
        }
    }
}

// Helper function to get the section name for a given field
function getSectionName(fieldName) {
    var fieldElement = g_form.getControl(fieldName);
    
    if (fieldElement) {
        var sectionElement = fieldElement.closest('.section'); // Find the closest section element
        if (sectionElement) {
            return sectionElement.getAttribute('data-section'); // Adjust if needed
        }
    }
    return '';
}
]]></script>
